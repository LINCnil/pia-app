{
  "name": "pia",
  "productName": "PIA",
  "version": "2.3.0",
  "description": "Version Portable Outil PIA",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w --x64 --ia32",
    "linux": "electron-builder -l",
    "win-cert": "electron-builder create-self-signed-cert -p atnos",
    "publish-to-github": "electron-builder -p onTagOrDraft"
  },
  "author": "ATNOS",
  "repository": "https://github.com/LINCnil/pia-app",
  "keywords": [
    "Electron",
    "PIA"
  ],
  "build": {
    "appId": "com.atnos.pia",
    "afterSign": "notarize.js",
    "directories": {
      "buildResources": ".",
      "output": "releases"
    },
    "mac": {
      "publish": [
        "github"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "category": "public.app.category.productivity"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ],
      "verifyUpdateCodeSignature": false,
      "publisherName": "ATNOS"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "electron-log": "^4.0.6",
    "electron-notarize": "^0.2.1",
    "electron-updater": "^4.2.0",
    "electron-window-state": "^5.0.3"
  }
}
